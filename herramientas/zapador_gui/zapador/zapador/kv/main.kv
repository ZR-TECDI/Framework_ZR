#:kivy 1.11.1

<Pantalla_Base@GridLayout>:
    rows:2
    padding:8
    canvas:
        Rectangle:
            size:self.size
            pos:self.pos
            source:'zapador/assets/img/camo.jpg'

<Contenido@GridLayout>:
    cols:3
    hint_size_y:1
    canvas:
        Color: 
            rgba: 0.20,0.18,0.18,1
        Rectangle:
            size:root.size
            pos:root.pos

<Pantalla_Nueva>:
    Pantalla_Base:
        Tabs1:
        Contenido:
            Label:
                text:'Nueva wea'

<Pantalla_Importar>:
    Pantalla_Base:
        Tabs2:
        Contenido:
            Label:
                text:'Importar la wea'

<Pantalla_Opciones>:
    Pantalla_Base:
        Tabs3:
        Contenido:
            Label:
                text:'Opciones de la wea'
